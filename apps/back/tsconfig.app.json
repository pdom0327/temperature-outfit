{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "lib": ["ES2021.String"]
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
